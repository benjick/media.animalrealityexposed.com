type User {
  id: ID! @id
  email: String! @unique
  name: String
  password: String!
  salt: String!
  events: [Event!]!
}

type Event {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  date: DateTime!
  owner: User! @relation(link: INLINE)
  media: [Media!]!
}

type Tag {
  id: ID! @id
  name: String!
  media: [Media!]!
}

enum MediaTypes {
  IMAGE
}

type Media {
  id: ID! @id,
  type: MediaTypes
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  date: DateTime!
  tags: [Tag!]!
  event: Event!
}
